{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./api",  // Compiled files will go here
    "rootDir": "./src"    // Ensure this matches your source folder
  },
  "include": ["src/**/*", "custom.d.ts"],  
  "exclude": ["node_modules"]
}